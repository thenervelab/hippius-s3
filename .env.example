# PostgreSQL configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/hippius

# When using Docker Compose, use this instead:
# DATABASE_URL=postgresql://postgres:postgres@db:5432/hippius

# IPFS configuration
HIPPIUS_IPFS_SERVICE_URL=http://127.0.0.1:5001

# When using Docker Compose, use this instead:
# HIPPIUS_IPFS_SERVICE_URL=http://ipfs:5001

# S3 settings
HIPPIUS_S3_BUCKET_NAME=hippius-bucket
HIPPIUS_S3_REGION=us-east-1

# Application settings
DEBUG=false

# Server settings
HOST=0.0.0.0
PORT=8000

# dbmate configuration
DBMATE_MIGRATIONS_DIR=./hippius_s3/sql/migrations
DBMATE_SCHEMA_FILE=./hippius_s3/sql/schema.sql

# Security
# Generate this with a secure random string, e.g. `openssl rand -hex 32`
API_SIGNING_KEY=your-secret-key-for-signing-presigned-urls
