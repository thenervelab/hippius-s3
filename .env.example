# Database Configuration
DATABASE_URL=postgresql://username:password@host:5432/database

# IPFS Configuration
HIPPIUS_IPFS_GET_URL=http://ipfs:8080
HIPPIUS_IPFS_STORE_URL=http://ipfs:5001

# Security
FRONTEND_HMAC_SECRET=your-secret-key-here
RATE_LIMIT_PER_MINUTE=100
MAX_REQUEST_SIZE_MB=100
MIN_BUCKET_NAME_LENGTH=3
MAX_BUCKET_NAME_LENGTH=100
MAX_OBJECT_KEY_LENGTH=100
MAX_METADATA_SIZE=200


# Logging
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production
DEBUG=false

# Feature Flags
ENABLE_AUDIT_LOGGING=true
ENABLE_STRICT_VALIDATION=true
ENABLE_API_DOCS=false

# Blockchain
HIPPIUS_SUBSTRATE_URL=wss://hippius-testnet.starkleytech.com
HIPPIUS_VALIDATOR_REGION=decentralized

# Redis for caching/rate limiting
REDIS_URL=redis://redis:6379/0
